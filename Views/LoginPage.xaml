<Page x:Class="TicketManagementSystem.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:TicketManagementSystem.ViewModels"
      xmlns:shared="clr-namespace:TicketManagementSystem.Views.Shared"
      Title="Login">

	<Page.DataContext>
		<vm:LoginViewModel/>
	</Page.DataContext>

	<DockPanel Background="{StaticResource BackgroundBrush}">
		<shared:Header DockPanel.Dock="Top"/>
		<shared:Footer DockPanel.Dock="Bottom"/>

		<Grid VerticalAlignment="Center" HorizontalAlignment="Center">
			<Border Background="{StaticResource CardBrush}"
                    Padding="40"
                    Effect="{StaticResource DropShadowEffect}">
				<StackPanel Width="320" VerticalAlignment="Center">

					<TextBlock Text="Login"
                               FontSize="28"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,25"/>

					<TextBlock Text="Username:" FontWeight="Bold" Margin="0,0,0,3"/>
					<TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

					<TextBlock Text="Password:" FontWeight="Bold" Margin="0,5,0,3"/>
					<PasswordBox x:Name="PasswordBox"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 Margin="0,0,0,20"/>

					<Button Content="Login"
						Command="{Binding LoginCommand}"
						Background="{StaticResource PrimaryBrush}"
						Foreground="White"
						BorderThickness="0"
						Height="30"
						FontSize="15"
						Margin="0,5,0,10">
						<Button.Template>
							<ControlTemplate TargetType="Button">
								<Border Background="{TemplateBinding Background}"
										CornerRadius="0"
										BorderThickness="0">
									<ContentPresenter HorizontalAlignment="Center"
													  VerticalAlignment="Center"/>
								</Border>
							</ControlTemplate>
						</Button.Template>
					</Button>

					<!-- âœ… Create Account Link -->
					<TextBlock HorizontalAlignment="Center"
                               TextAlignment="Center"
                               FontSize="13"
                               Foreground="{StaticResource TextBrush}">
						<Run Text="Don't have an account yet? "/>
						<Run Text="Create Account"
                             Foreground="{StaticResource PrimaryBrush}"
                             TextDecorations="Underline"
                             Cursor="Hand">
							<Run.InputBindings>
								<MouseBinding Gesture="LeftClick"
                                              Command="{Binding NavigateToRegisterCommand}" />
							</Run.InputBindings>
						</Run>
					</TextBlock>
				</StackPanel>
			</Border>
		</Grid>
	</DockPanel>
</Page>