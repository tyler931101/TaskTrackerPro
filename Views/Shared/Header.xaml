<UserControl x:Class="TicketManagementSystem.Views.Shared.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60" Background="{StaticResource PrimaryBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Logo -->
        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="20,0">
            <Image Source="pack://application:,,,/TicketManagementSystem;component/Resources/Images/logo.png"
                Width="200"
				Height="200"
				Cursor="Hand"
				MouseDown="Logo_Click"/>
            <!-- <TextBlock Text="Ticket Management System"
                    FontSize="18"
                    Foreground="White"
                    Margin="10,0"/> -->
        </StackPanel>

        <!-- Right: Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,20,0">
            <Button Content="Login"  Click="Login_Click" Command="{Binding NavigateToLoginCommand}"
                    Foreground="White" Background="Transparent" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</UserControl>