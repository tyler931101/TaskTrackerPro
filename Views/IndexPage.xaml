<Page x:Class="TicketManagementSystem.Views.IndexPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home">

	<Grid Background="{StaticResource BackgroundBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Carousel -->
		<ItemsControl ItemsSource="{Binding CarouselImages}" Grid.Row="0" HorizontalAlignment="Center">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel Orientation="Horizontal"/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Border CornerRadius="10" Margin="10" BorderBrush="#DDD" BorderThickness="1">
						<Image Source="{Binding}" Width="400" Height="200"/>
					</Border>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>

		<!-- Buttons -->
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Content="Login" Command="{Binding NavigateLoginCommand}"/>
			<Button Content="Register" Command="{Binding NavigateRegisterCommand}"/>
		</StackPanel>
	</Grid>
</Page>