<Page x:Class="TicketManagementSystem.Views.LayoutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:TicketManagementSystem.Core"
      Title="Layout">

    <DockPanel>
        <!-- Top Navigation Bar -->
        <Border DockPanel.Dock="Top" Background="{StaticResource PrimaryBrush}" Height="50">
            <DockPanel LastChildFill="True">

                <!-- Left Navigation Buttons -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" DockPanel.Dock="Left">
                    <Button Content="Tickets"
                            Command="{Binding NavigateTicketsCommand}"
                            Foreground="White" Background="Transparent"
                            BorderThickness="0" FontSize="16" Margin="10,0"/>
                    <Button Content="Charts"
                            Command="{Binding NavigateChartsCommand}"
                            Foreground="White" Background="Transparent"
                            BorderThickness="0" FontSize="16" Margin="10,0"/>
                    <Button Content="Profile"
                            Command="{Binding NavigateProfileCommand}"
                            Foreground="White" Background="Transparent"
                            BorderThickness="0" FontSize="16" Margin="10,0"/>
                    <!-- Admin-only Dashboard -->
                    <Button Content="Dashboard"
                            Command="{Binding NavigateDashboardCommand}"
                            Foreground="White" Background="Transparent"
                            BorderThickness="0" FontSize="16" Margin="10,0"
                            Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Right Theme Toggle -->
                <Button Content="🌙 Theme"
                        Command="{Binding ToggleThemeCommand}"
                        DockPanel.Dock="Right"
                        Foreground="White" Background="Transparent"
                        BorderThickness="0" FontSize="16" Margin="0,0,20,0"/>
            </DockPanel>
        </Border>

        <!-- Main Content Frame -->
        <Frame x:Name="ContentFrame"
               NavigationUIVisibility="Hidden"
               Background="{StaticResource BackgroundBrush}"/>
    </DockPanel>
</Page>