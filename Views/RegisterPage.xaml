<Page x:Class="TicketManagementSystem.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Register">
    <Grid Background="{StaticResource BackgroundBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Register" FontSize="28" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,10"/>
            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" Margin="0,0,0,10"/>
            <Button Content="Register" Command="{Binding RegisterCommand}" Margin="0,10,0,0"/>
            <Button Content="Back" Command="{Binding BackCommand}" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>